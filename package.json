{
  "name": "clawdia",
  "version": "1.0.3",
  "description": "A local-first AI workspace for browser, code, and task automation.",
  "author": "Daniel Parker",
  "license": "MIT",
  "homepage": "https://github.com/chillysbabybackribs/Clawdia",
  "repository": {
    "type": "git",
    "url": "https://github.com/chillysbabybackribs/Clawdia"
  },
  "keywords": [
    "ai",
    "electron",
    "browser-automation",
    "claude",
    "playwright",
    "desktop",
    "llm"
  ],
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && wait-on dist/main/main.js && cross-env NODE_ENV=development electron . --no-sandbox",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "postinstall": "cross-env PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1 electron-rebuild -f -w better-sqlite3",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder --linux --mac --win",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "site:check": "node scripts/site-check.mjs",
    "artifacts:check": "node scripts/artifacts-check.mjs",
    "checksums:gen": "node scripts/checksums-gen.mjs",
    "secrets:scan": "node scripts/secrets-scan.mjs",
    "smoke:electron": "node scripts/smoke-electron.mjs",
    "release:check": "node scripts/release-check.mjs"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@playwright/mcp": "^0.0.64",
    "better-sqlite3": "^12.6.2",
    "docx": "^9.5.1",
    "dompurify": "^3.3.1",
    "electron-store": "^8.2.0",
    "mammoth": "^1.11.0",
    "marked": "^17.0.1",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "playwright": "^1.59.0-alpha-1770338664000",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.17.4",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "nodemon": "^3.1.11",
    "typescript": "^5.5.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.clawdia.app",
    "afterPack": "./build/afterPack.js",
    "productName": "Clawdia",
    "copyright": "Copyright Â© 2026 Daniel Parker",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/playwright-core/.local-browsers/**",
      "!node_modules/playwright/.local-browsers/**",
      "package.json",
      "!LICENSE",
      "!LICENSE.*"
    ],
    "extraResources": [],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "Clawdia.${ext}",
      "category": "Development",
      "maintainer": "Daniel Parker <dparker918@yahoo.com>",
      "executableArgs": [
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ],
      "icon": "build/icon.png",
      "desktop": {
        "entry": {
          "Name": "Clawdia",
          "Comment": "AI workspace for browser, code, and task automation",
          "Terminal": "false",
          "Type": "Application",
          "Categories": "Development;Utility;"
        }
      },
      "synopsis": "AI-powered desktop workspace",
      "description": "A local-first AI workspace that combines Claude with browser automation and full local system access."
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "Clawdia-${arch}.${ext}",
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clawdia",
      "artifactName": "Clawdia-setup.exe"
    },
    "dmg": {
      "artifactName": "Clawdia-${arch}.dmg",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "appImage": {
      "artifactName": "Clawdia.AppImage",
      "license": null
    },
    "deb": {
      "artifactName": "Clawdia.deb"
    },
    "portable": {
      "artifactName": "Clawdia-portable.exe"
    },
    "publish": null
  }
}
